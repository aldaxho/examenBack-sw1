# ========================================
# CONFIGURACIÓN DE ENTORNO - PRODUCCIÓN
# ========================================
# Copia este archivo como .env y configura tus valores

# Entorno (development | production)
NODE_ENV=production

# Puerto del servidor
PORT=3001

# Base de datos PostgreSQL
DB_HOST=tu-host-de-base-de-datos.com
DB_PORT=25060
DB_NAME=nombre_base_datos
DB_USER=usuario_base_datos
DB_PASSWORD=contraseña_base_datos
DB_SSL=true

# Seguridad - JWT (cambiar en producción)
JWT_SECRET=cambia_este_secreto_por_uno_muy_seguro_y_largo

# API Keys (opcional - si usas OpenAI directamente)
OPENAI_API_KEY=tu_api_key_de_openai

# Agente de IA (DigitalOcean o similar)
AGENT_URL=https://tu-agente.do-ai.run
AGENT_TOKEN=tu_token_secreto_del_agente
AGENT_DEBUG=false
AGENT_MOCK=false
AGENT_MODE=auto

# Frontend (CORS)
FRONT_ORIGIN=https://tu-frontend.netlify.app
